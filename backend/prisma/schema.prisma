// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  Tenants  Tenant[]
}

model Tenant {
  id       String    @id @default(cuid())
  Owner    User      @relation(fields: [ownerId], references: [id])
  ownerId  String
  ApiKeys  ApiKey[]
  Accounts Account[]
}

model ApiKey {
  id       String @id @default(cuid())
  Tenant   Tenant @relation(fields: [tenantId], references: [id])
  tenantId String
  key      String @unique @default(uuid())

  @@index([key], name: "key")
}

model Account {
  id         String @id @default(cuid())
  Tenant     Tenant @relation(fields: [tenantId], references: [id])
  tenantId   String
  credential String
  password   String

  @@unique([tenantId, credential], name: "tenantId_credential")
}
